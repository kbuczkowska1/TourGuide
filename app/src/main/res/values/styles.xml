<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- Style for a category -->
    <style name="CategoryStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">@dimen/category_style_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for a Imave View in a category-->
    <style name="SubCategoryImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/layout_height_sub_category_image_view</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/padding_bottom_sub_category_image_view
        </item>
        <item name="android:layout_marginTop">@dimen/padding_top_sub_category_image_view</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- Style for a View in a category-->
    <style name="ViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_height_view</item>
        <item name="android:layout_marginBottom">@dimen/size_layout_margin_bottom_view</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Style for a LinearLayout in a SubCategory-->
    <style name="LinearLayoutSubCategory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/image_wroc3</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_linear_layout_category</item>
    </style>

    <!-- Style for a title in a category-->
    <style name="TitleSubCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_text_view_sub_category_title</item>
    </style>

    <!-- Style for a subtitle in a category-->
    <style name="SubTitleSubCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_text_view_sub_category_sub_title</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_text_view_sub_category_sub_title
        </item>
    </style>

    <!-- Style for a essence text in a category-->
    <style name="EssencSubCategory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_text_view_essence_sub_category</item>
    </style>
</resources>
